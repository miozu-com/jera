{
  "name": "@miozu/jera",
  "version": "0.3.0",
  "description": "Minimal, reactive component library for Svelte 5",
  "type": "module",
  "scripts": {
    "prepublishOnly": "echo 'Publishing @miozu/jera...' && test -f src/index.js"
  },
  "svelte": "./src/index.js",
  "exports": {
    ".": {
      "svelte": "./src/index.js",
      "default": "./src/index.js"
    },
    "./tokens": {
      "style": "./src/tokens/index.css",
      "default": "./src/tokens/index.css"
    },
    "./tokens/colors": {
      "style": "./src/tokens/colors.css",
      "default": "./src/tokens/colors.css"
    },
    "./tokens/spacing": {
      "style": "./src/tokens/spacing.css",
      "default": "./src/tokens/spacing.css"
    },
    "./tokens/typography": {
      "style": "./src/tokens/typography.css",
      "default": "./src/tokens/typography.css"
    },
    "./tokens/effects": {
      "style": "./src/tokens/effects.css",
      "default": "./src/tokens/effects.css"
    },
    "./layouts": {
      "style": "./src/layouts/index.css",
      "default": "./src/layouts/index.css"
    },
    "./utils": "./src/utils/index.js",
    "./actions": "./src/actions/index.js"
  },
  "files": [
    "src",
    "llms.txt",
    "CLAUDE.md"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "svelte": "^5.41.0"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "components",
    "design-system",
    "ui",
    "miozu",
    "base16",
    "dark-theme"
  ],
  "author": "Nicholas Glazer <glazer.nicholas@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/miozu-com/jera"
  },
  "homepage": "https://miozu.com",
  "bugs": {
    "url": "https://github.com/miozu-com/jera/issues"
  }
}
