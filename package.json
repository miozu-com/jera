{
  "name": "@miozu/jera",
  "version": "0.1.0",
  "description": "Minimal, reactive component library for Svelte 5",
  "type": "module",
  "svelte": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
