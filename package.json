{
  "name": "@miozu/jera",
  "version": "0.4.2",
  "description": "Minimal, reactive component library for Svelte 5",
  "type": "module",
  "scripts": {
    "prepublishOnly": "echo 'Publishing @miozu/jera...' && test -f src/index.js"
  },
  "svelte": "./src/index.js",
  "exports": {
    ".": {
      "svelte": "./src/index.js",
      "default": "./src/index.js"
