    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "svelte": "^5.41.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "components",
    "design-system",
    "ui",
    "miozu"
  ],
